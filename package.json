{
  "name": "@mondash/website-api",
  "version": "0.1.0",
  "description": "Website APIe",
  "homepage": "https://github.com/mondash/website-api#readme",
  "bugs": "https://github.com/mondash/website-api/issues",
  "repository": "https://github.com/mondash/website-api.git",
  "author": "Matthew Ondash <ondashm@gmail.com>",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc --build tsconfig.json",
    "changeset": "changeset",
    "check:lint": "npm run lint .",
    "check:style": "npm run style --check .",
    "check:types": "tsc --build tsconfig.json",
    "clean:build": "rimraf build dist",
    "clean:coverage": "rimraf coverage",
    "clean:vendor": "rimraf node_modules",
    "fix:style": "npm run style --write .",
    "package:publish": "npm run build && changeset publish",
    "package:version": "changeset version && npm run fix:style",
    "test": "jest --config config/jest.config.ts",
    "test:ci": "npm run test --ci",
    "test:watch": "npm run test --watch",
    "lint": "eslint --config config/.eslintrc.yml --ignore-path .gitignore",
    "style": "prettier --config config/.prettierrc.json --ignore-path .gitignore"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.17",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "dotenv": "^10.0.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^27.8.0",
    "jest": "^29.7.0",
    "jest-watch-typeahead": "^2.2.2",
    "prettier": "^2.8.8",
    "rimraf": "^3.0.2",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
